{
  "name": "solstice-calendar",
  "version": "0.1.0",
  "description": "Headless, framework-agnostic calendar and date-time picker core",
  "keywords": [
    "calendar",
    "date-time",
    "datepicker",
    "datetimepicker",
    "time-picker",
    "headless",
    "typescript",
    "framework-agnostic"
  ],
  "homepage": "https://github.com/Moulyy/solstice-calendar#readme",
  "bugs": {
    "url": "https://github.com/Moulyy/solstice-calendar/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Moulyy/solstice-calendar.git"
  },
  
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "test": "vitest run",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "example:vanilla": "pnpm build && node examples/vanilla/server.mjs"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
